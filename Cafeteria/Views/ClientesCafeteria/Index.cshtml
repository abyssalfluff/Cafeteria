@model IEnumerable<Cafeteria.ClientesCafeteria>

@{
    ViewBag.Title = "Clientes";
}

<h2 class="mb-4">Registro de Clientes</h2>

<p>
    @Html.ActionLink("Añadir un cliente", "Create", null, new { @class = "btn btn-success mb-2" })
</p>
@Html.ActionLink("Ver Todos", "Index", null, new { @class = "btn btn-secondary mb-3 me-2" })

@using (Html.BeginForm("PorNombre", "ClientesCafeteria", FormMethod.Get))
{
    <div class="mb-4 d-flex">
        <input class="form-control me-2" type="text" name="search" placeholder="Buscar cliente por nombre..." />
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6 col-12 mb-4">
            <div class="card shadow-sm h-100 border-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-person-fill"></i> @item.Nombre
                    </h5>
                    <div class="d-flex justify-content-between mt-3">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id_Cliente }, new { @class = "btn btn-outline-success btn-sm" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id_Cliente }, new { @class = "btn btn-outline-primary btn-sm" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Cliente }, new { @class = "btn btn-outline-danger btn-sm" })
                    </div>
                </div>
            </div>
        </div>
    }
    @if (!Model.Any())
    {
        <p class="alert alert-warning">No se encontraron clientes con ese nombre.</p>
    }
</div>
