@model IEnumerable<Cafeteria.Producto>

@{
    ViewBag.Title = "Catálogo";
}

<h2 class="mb-4">Catálogo de Productos</h2>

<a href="@Url.Action("Index", "Carrito")" class="btn btn-primary mb-4">Ver Carrito</a>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Nombre</h5>
                    <h6 class="card-subtitle mb-2 text-muted">ID: @item.Id_Producto | Sección: @item.Seccion</h6>
                    <p class="card-text mt-2">
                        <strong>Ingredientes:</strong> @item.Ingredientes<br />
                        <strong>Precio:</strong> ₡@item.Precio.ToString("N0")
                    </p>
                    <a href="@Url.Action("Agregar", "Carrito", new { id = item.Id_Producto })" class="btn btn-success mt-auto w-100">
                        Agregar al carrito
                    </a>
                </div>
            </div>
        </div>
    }
</div>
