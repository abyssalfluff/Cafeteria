@model IEnumerable<Cafeteria.Producto>

@{
    ViewBag.Title = "Catálogo";
}

<!-- Tipografía moderna -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: white;
        margin: 0;

    }

    h2 {
        text-align: center;
        font-weight: 600;
        color: #333;
        margin-bottom: 40px;
        text-shadow: 0 0 4px rgba(255,255,255,0.4);
    }

    .btn-primary {
        background: #6a11cb;
        background: linear-gradient(to right, #6a11cb, #2575fc);
        border: none;
        font-weight: 500;
    }

        .btn-primary:hover {
            opacity: 0.9;
        }

    .card {
        border: none;
        border-radius: 16px;
        background: #fff;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .card-title {
        font-weight: 600;
        color: #444;
    }

    .card-subtitle {
        font-size: 0.9rem;
    }

    .btn-success {
        background-color: #00b894;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #019877;
        }

    .catalogo-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .card-text {
        color: #555;
    }

    .bi-cart-fill {
        margin-right: 6px;
    }
</style>

<div class="catalogo-container">
    <h2>Catálogo de Productos</h2>

    <div class="d-flex justify-content-end mb-4">
        <a href="@Url.Action("Index", "Carrito")" class="btn btn-primary">
            <i class="bi bi-cart-fill"></i> Ver Carrito
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Nombre</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            ID: @item.Id_Producto | Sección: @item.Seccion
                        </h6>
                        <p class="card-text mt-2">
                            <strong>Ingredientes:</strong> @item.Ingredientes<br />
                            <strong>Precio:</strong> ₡@item.Precio.ToString("N0")
                        </p>
                        <a href="@Url.Action("Agregar", "Carrito", new { id = item.Id_Producto })" class="btn btn-success mt-auto w-100">
                            <i class="bi bi-plus-circle-fill"></i> Agregar al carrito
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>