<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cafetería</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg shadow-sm" style="background: linear-gradient(90deg, #c1d8ff, #e0c3fc); font-family: 'Poppins', sans-serif;">
        <div class="container">
            <a class="navbar-brand fw-semibold text-dark" href="@Url.Action("Index", "Home")" style="font-size: 1.3rem;">
                <i class="bi bi-cup-hot-fill"></i> Cafetería CTP Carrizal
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCafe" aria-controls="navbarCafe" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCafe">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="font-size: 0.95rem;">

                    <li class="nav-item">
                        @Html.ActionLink("Administrador", "Index", "Productos", null, new { @class = "nav-link text-dark" })
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Preparacion")">Preparación y Entrega</a>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Clientes", "Index", "ClientesCafeteria", null, new { @class = "nav-link text-dark" })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="pedidosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Pedidos
                            </a>
                            <ul class="dropdown-menu border-0 shadow-sm" style="background-color: #f9f9f9;">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Pedidos")">Revisar Pedidos</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Productos_Pedido")">Productos de Pedidos</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Reporte", "Index", "Informe", null, new { @class = "nav-link text-dark" })
                        </li>
                    }

                    <li class="nav-item">
                        @Html.ActionLink("Catálogo", "Index", "Catalogo", null, new { @class = "nav-link text-dark" })
                    </li>

                </ul>

                <div class="d-flex">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cafetería C.T.P</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
