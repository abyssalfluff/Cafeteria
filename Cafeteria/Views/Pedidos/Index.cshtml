@model IEnumerable<Cafeteria.Pedido>

@{
    ViewBag.Title = "Index";
}

<h2>Revisar pedidos existentes</h2>

<table class="table">
    <tr>
        <th>
            ID del Pedido
        </th>
        <th>
            Cliente
        </th>
        <th>
            Fecha del Pedido
        </th>
        <th>
            Método de Pago
        </th>
        <th>
            Estado de Pedido
        </th>
        <th>
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Pedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientesCafeteria.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaPedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MetodoPago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado_Producto)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_Pedido }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Pedido }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Pedido })
        </td>
    </tr>
}

</table>
